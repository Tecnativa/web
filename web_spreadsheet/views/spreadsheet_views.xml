<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="spreadsheet_tree_view" model="ir.ui.view">
        <field name="name">spreadsheet.tree</field>
        <field name="model">spreadsheet</field>
        <field name="arch" type="xml">
            <tree name="spreadsheets" editable="top">
                <field name="name" />
                <field name="create_date" invisible="1"/>
                <button name="action_open_spreadsheet"
                    class="oe_stat_button"
                    icon="fa-file-excel"
                    type="object"
                    string="Open spreadsheet"
                    attrs="{'invisible': [('create_date', '==', False)]}"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_open_spreadsheets">
        <field name="name">Spreadsheets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">spreadsheet</field>
        <field name="domain">[]</field>
        <field name="view_mode">tree</field>
        <field name="context">{}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            No spreadsheet has been created!
          </p>
        </field>
    </record>
    <record id="view_spreadsheet_spreadsheet" model="ir.ui.view" >
        <field name="name">spreadsheet.spreadsheet</field>
        <field name="model">spreadsheet</field>
        <field name="arch" type="xml">
            <spreadsheet sample="1"></spreadsheet>
        </field>
    </record>
    <menuitem
        id="menu_view_spreadsheet"
        name="Spreadsheet"
        action="action_open_spreadsheets"
        sequence="50"
        web_icon="web_spreadsheet,static/description/icon.png"
    />
</odoo>
