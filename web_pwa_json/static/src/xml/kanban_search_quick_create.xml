<template>

<t t-name="web_pwa_json.KanbanSearchQuickCreate">
    <div class="o_kanban_search_quick_create" />
</t>

<t t-name="web_pwa_json.KanbanSearchQuickCreate.FormButtons">
    <div class="o_kanban_search_form_buttons">
        <t t-if="state == 'new'">
            <button class="btn btn-primary o_search_kanban_add">Add</button>
        </t>
        <t t-elif="state == 'dirty'">
            <button class="btn btn-success o_search_kanban_change mr-2"><i class="fa fa-check" /></button>
            <button class="btn btn-warning o_search_kanban_discard ml-2"><i class="fa fa-times" /></button>
        </t>
        <t t-else="">
            <button class="btn btn-danger o_search_kanban_remove w-100"><i class="fa fa-trash"/> Remove</button>
        </t>
    </div>
</t>

</template>
