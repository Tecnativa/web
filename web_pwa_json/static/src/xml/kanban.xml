<template>

<t t-name="KanbanSearch.KanbanSearchButtons">
    <div class="text-center w-100">
        <div class="input-group">
            <div class="input-group-prepend">
                <button type="button" t-attf-class="btn btn-secondary btn-lg input-group-button"><i class="fa fa-search" /></button>
            </div>
            <input type="text" class="form-control form-control-lg o_kanban_search_input" placeholder="Search..." aria-label="Search..." aria-describedby="btnGroupAddon2" />
            <div class="input-group-append">
                <button type="button" t-attf-class="btn btn-secondary btn-lg input-group-button o_kanban_search_erase"><i class="fa fa-eraser" /></button>
            </div>
        </div>
    </div>
</t>

<t t-name="KanbanSearch.KanbanSearchGroupButtons">
    <div class="o_kanban_search_groups">
        <div class="btn-group" role="group" aria-label="Groups">
            <t t-foreach="groups" t-as="group">
                <button type="button" t-attf-class="btn btn-lg btn-secondary rounded-0 border-top-0 {{group.active &amp;&amp; 'active' || ''}} o_btn_search_kanban_group" t-att-data-group="group_index"><t t-esc="group.name" /></button>
            </t>
        </div>

        <button type="button" class="btn btn-light btn-lg o_btn_lines">Lines <span class="ml-1 badge badge-light">0</span></button>
    </div>
</t>

</template>
